<% provide(:title,"用户注册")%>


<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="single-panel-header">
      <h3>新用户注册</h3>
    </div>
    <div class="signle-panel-body">
      <%=render 'shared/error_messages',object: @user%>
    </div>
    <%= form_for(@user,html: {class: "form-horizontal"}) do |f| %>
      <div class="form-group">
        <%=f.label "用户名称：",class: "col-sm-2 control-label"%>
        <div class="col-sm-6">
          <%=f.text_field :name,class: "form-control",placeholder: "输入用户名称"%>
        </div>
      </div>

      <div class="form-group">
        <%=f.label "邮箱：",class: "col-sm-2 control-label"%>
        <div class="col-sm-6">
          <%=f.text_field :email,class: "form-control",placeholder: "输入用户常用邮箱"%>
        </div>
      </div>

      <div class="form-group">
        <%=f.label "密码：",class: "col-sm-2 control-label"%>
        <div class="col-sm-6">
          <%=f.password_field :password,class: "form-control",placeholder: "最小长度6位"%>
        </div>
      </div>

      <div class="form-group">
        <%=f.label "重复密码：",class: "col-sm-2 control-label"%>
        <div class="col-sm-6">
          <%=f.password_field :password_confirmation,class: "form-control",placeholder: "再输入一次"%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit "注册新用户", class: "btn btn-large btn-primary"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
