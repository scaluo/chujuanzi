<% provide(:title,"用户登录")%>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="single-panel-header">
      <h3>用户登录</h3>
    </div>
    <div class="signle-panel-body">

    </div>
    <%= form_for(:session,html: {class: "form-horizontal"},url: sessions_path) do |f| %>
      <div class="form-group">
        <%=f.label "邮箱：",class: "col-sm-2 control-label"%>
        <div class="col-sm-6">
          <%=f.text_field :email,class: "form-control",placeholder: "输入用户邮箱"%>
        </div>
      </div>

      <div class="form-group">
        <%=f.label "密码：",class: "col-sm-2 control-label"%>
        <div class="col-sm-6">
          <%=f.password_field :password,class: "form-control",placeholder: "输入登录密码"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit "用户登录", class: "btn btn-large btn-primary"%>
        </div>
      </div>
    <% end %>

    <p>还没注册? <%= link_to "注册新用户!", signup_path %></p>
  </div>
</div>
