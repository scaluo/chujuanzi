<div class="question-panel">
    <%=idx%>:<%=question.content%>（<%=question.score%>）
    <div class="answer-panel">
    <% question.answers.each do |answer|%>
      <p><%=answer.content%>
      <% if answer.ischoose %>
        <font color="red">选中</font>
      <% end %>
      </p>
    <% end %>
    <%=button_to("删除",testpaper_question_path(@testpaper,question),method: "delete", data: { confirm: "确定删除吗?" },class: "btn btn-primary btn-sm")%>
    </div>
</div>
